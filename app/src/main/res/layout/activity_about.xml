<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".About"
    android:background="@android:color/white">

    <!-- Bagian Judul About -->
    <TextView
        android:id="@+id/textabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ABOUT"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Gambar About -->
    <ImageView
        android:id="@+id/imageabout"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/textabout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foto_about" />

    <!-- Deskripsi About -->
    <TextView
        android:id="@+id/textdeskabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageabout"
        android:text="Aplikasi ini dikembangkan oleh Evi Sigalingging dengan Nim 2205112009, yang saat ini menempuh pendidikan di Polmed. Berkomitmen dalam menciptakan aplikasi yang bermanfaat, efisien, dan mudah diakses oleh pengguna. Dengan latar belakang teknologi, saya memastikan bahwa aplikasi ini tidak hanya membantu, tetapi juga memberikan pengalaman yang menyenangkan dalam mencari produk skincare terbaik."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:justificationMode="inter_word"
        android:lineSpacingMultiplier="1.4"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Tambahkan Contact Information -->
    <TextView
        android:id="@+id/textcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textdeskabout"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Email: evisigalingging@students.polmed.ac.id"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <!-- Tombol Kembali ke MainActivity -->
    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textcontact"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Kembali ke Halaman Utama"
        android:backgroundTint="#cdb4db"
        android:textColor="@android:color/white"
        android:padding="10dp" />

</RelativeLayout>
