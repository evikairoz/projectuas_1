<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailList5">

    <ImageView
        android:id="@+id/image6"
        android:layout_width="331dp"
        android:layout_height="384dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lotion" />

    <TextView
        android:id="@+id/textlotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body Lotion"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/image6"/>

    <TextView
        android:id="@+id/textdeskripsilotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body lotion adalah pelembap yang digunakan untuk kulit tubuh dengan tujuan menjaga kelembapan, kelembutan, dan kehalusan kulit. "
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/textlotion" />

</RelativeLayout>