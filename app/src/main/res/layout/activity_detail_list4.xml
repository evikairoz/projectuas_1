<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailList4">


    <ImageView
        android:id="@+id/image5"
        android:layout_width="317dp"
        android:layout_height="335dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/peeling" />

    <TextView
        android:id="@+id/textpeeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peeling Gel"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/image5"/>

    <TextView
        android:id="@+id/textdeskripsipeeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peeling gel adalah produk eksfoliasi yang membantu mengangkat sel-sel kulit mati dari permukaan kulit. Berbeda dengan scrub yang kasar, peeling gel biasanya memiliki tekstur lembut yang mengandung bahan kimia atau enzim yang bekerja melonggarkan dan mengangkat sel kulit mati "
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/textpeeling" />
</RelativeLayout>